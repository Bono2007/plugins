{
   "compilerOptions": {
     "baseUrl": ".",
     "pretty": true,
     "strict": true,
     "esModuleInterop": true,
     "sourceMap": true,
     "noImplicitAny": false,
     "target": "es6",
     "module": "none",
     "outDir": "dist",
     "moduleResolution": "node",
     "lib": ["es6", "esnext"],
     "typeRoots": [ "./node_modules/@types", "./src" ],
     "types": [ "jest", "node" ],
     "allowJs": true,
     "checkJs": true
   },
   "include": ["./src/**/*.ts"],
   "exclude": ["src/__tests__"]
 }
