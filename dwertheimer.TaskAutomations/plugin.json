{
  "noteplan.minAppVersion": "3.0.23", 
  "plugin.id": "dwertheimer.TaskAutomations", 
  "plugin.name": "âœ… Task Automations", 
  "plugin.description": "Functions for handling Tasks", 
  "plugin.author": "David Wertheimer",
  "plugin.version": "0.0.1", 
  "plugin.dependencies": [ ], 
  "plugin.script": "script.js",
  "plugin.commands": [ 
    {
      "name": "ts", 
      "description": "Sort tasks on the page (e.g. after a sweep)", 
      "jsFunction": "sortTasks"
    },
    {
      "name": "ldn", 
      "description": "Link to today's Calendar Note", 
      "jsFunction": "insertCalendarNoteLink"
    },
    {
      "name": "date", 
      "description": "Insert date (without time) at cursor", 
      "jsFunction": "insertDate"
    },    
    {
      "name": "time", 
      "description": "Insert date+time (in ISO format) at cursor", 
      "jsFunction": "insertISODate"
    },
  {
      "name": "now", 
      "description": "Insert (human readable) date+time at cursor", 
      "jsFunction": "insertDateTime"
    }  ]
